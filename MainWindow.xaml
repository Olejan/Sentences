<Window x:Class="Sentences.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sentences"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Height="25" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,5,0,5"
                Content="Load sentences" Click="BtnLoad_Click"/>
        <Button Grid.Row="1" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,25,5"
                Content="Close" Click="BtnClose_Click"/>
    </Grid>
</Window>
